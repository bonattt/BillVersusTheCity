.health_bar {
    width: 300px;
    height: 50px;
    background-color: rgb(0, 0, 0);
    margin-top: 10px;
    margin-right: 0;
    margin-bottom: 0;
    margin-left: 10px;
}

.health_bar_fill {
    margin-top: 5px;
    margin-right: 5px;
    margin-bottom: 5px;
    margin-left: 5px;
    flex-grow: 1;
    justify-content: center;
    align-items: center;
}

.health_bar_text {
    font-size: 16%;
    -unity-font-style: bold;
}
